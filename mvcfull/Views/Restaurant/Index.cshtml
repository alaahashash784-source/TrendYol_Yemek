@*
    صفحة عرض جميع المطاعم - تعرض قائمة المطاعم
    Controller: RestaurantController.cs → Action: Index()
    الربط: Html.ActionLink("Menu", "ByRestaurant", "Food") ينتقل لأطعمة المطعم
*@
@model IEnumerable<mvc_full.Models.Restoran>

@{
    ViewBag.Title = "Restoranlar";
    bool isAdmin = Session["IsAdmin"] != null && (bool)Session["IsAdmin"];
    var kategoriler = ViewBag.Kategoriler as List<SelectListItem>;
    string searchKategori = ViewBag.SearchKategori as string;
    var restaurantStats = ViewBag.RestaurantStats as Dictionary<int, dynamic>;
    decimal? minFiyat = ViewBag.MinFiyat as decimal?;
    decimal? maxFiyat = ViewBag.MaxFiyat as decimal?;
    int? maxHazirlanmaSuresi = ViewBag.MaxHazirlanmaSuresi as int?;
    string siralama = ViewBag.Siralama as string;
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">
            <i class="fas fa-store text-warning me-3"></i>Restoranlar
        </h1>
        <p class="lead mb-4">En iyi restoranlarimizi kesfedin</p>
        @if (isAdmin)
        {
            @Html.ActionLink("Yeni Restoran Ekle", "Create", null, new { @class = "btn btn-warning btn-lg shadow" })
        }
    </div>

    <!-- فلترة وترتيب متقدم -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-filter text-primary me-2"></i>Filtrele ve Sırala</h5>
                </div>
                <div class="card-body">
                    <form method="get" action="@Url.Action("Index", "Restaurant")">
                        <div class="row g-3">
                            <!-- فئة الطعام -->
                            <div class="col-md-4">
                                <label class="form-label fw-bold"><i class="fas fa-utensils me-1"></i>Kategori</label>
                                <select name="kategori" class="form-select">
                                    <option value="">Tümü</option>
                                    @if (kategoriler != null)
                                    {
                                        foreach (var kat in kategoriler.Where(k => k.Value != ""))
                                        {
                                            <option value="@kat.Value" @(kat.Value == searchKategori ? "selected" : "")>@kat.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            
                            <!-- السعر -->
                            <div class="col-md-3">
                                <label class="form-label fw-bold"><i class="fas fa-lira-sign me-1"></i>Min Fiyat (TL)</label>
                                <input type="number" name="minFiyat" class="form-control" placeholder="0" value="@minFiyat" step="5">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold"><i class="fas fa-lira-sign me-1"></i>Max Fiyat (TL)</label>
                                <input type="number" name="maxFiyat" class="form-control" placeholder="500" value="@maxFiyat" step="5">
                            </div>
                            
                            <!-- سرعة التحضير -->
                            <div class="col-md-2">
                                <label class="form-label fw-bold"><i class="fas fa-clock me-1"></i>Max Süre (dk)</label>
                                <select name="maxHazirlanmaSuresi" class="form-select">
                                    <option value="">Hepsi</option>
                                    <option value="15" @(maxHazirlanmaSuresi == 15 ? "selected" : "")>15 dk</option>
                                    <option value="30" @(maxHazirlanmaSuresi == 30 ? "selected" : "")>30 dk</option>
                                    <option value="45" @(maxHazirlanmaSuresi == 45 ? "selected" : "")>45 dk</option>
                                    <option value="60" @(maxHazirlanmaSuresi == 60 ? "selected" : "")>60 dk</option>
                                </select>
                            </div>
                            
                        </div>
                        
                        <div class="row g-3 mt-2">
                            <!-- الترتيب -->
                            <div class="col-md-4">
                                <label class="form-label fw-bold"><i class="fas fa-sort me-1"></i>Sırala</label>
                                <select name="siralama" class="form-select">
                                    <option value="">Varsayılan</option>
                                    <option value="fiyat_artan" @(siralama == "fiyat_artan" ? "selected" : "")>Fiyat: Düşükten Yükseğe</option>
                                    <option value="fiyat_azalan" @(siralama == "fiyat_azalan" ? "selected" : "")>Fiyat: Yüksekten Düşüğe</option>
                                    <option value="hizli" @(siralama == "hizli" ? "selected" : "")>En Hızlı Hazırlanan</option>
                                </select>
                            </div>
                            
                            <div class="col-md-8 d-flex align-items-end gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-search me-2"></i>Filtrele
                                </button>
                                <a href="@Url.Action("Index", "Restaurant")" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>Temizle
                                </a>
                            </div>
                        </div>
                    </form>
                    
                    @if (!string.IsNullOrEmpty(searchKategori) || minFiyat.HasValue || maxFiyat.HasValue || maxHazirlanmaSuresi.HasValue)
                    {
                        <div class="mt-3 pt-3 border-top">
                            <span class="text-muted me-2">Aktif Filtreler:</span>
                            @if (!string.IsNullOrEmpty(searchKategori))
                            {
                                <span class="badge bg-info me-1"><i class="fas fa-tag me-1"></i>@searchKategori</span>
                            }
                            @if (minFiyat.HasValue)
                            {
                                <span class="badge bg-success me-1">Min: @minFiyat TL</span>
                            }
                            @if (maxFiyat.HasValue)
                            {
                                <span class="badge bg-warning text-dark me-1">Max: @maxFiyat TL</span>
                            }
                            @if (maxHazirlanmaSuresi.HasValue)
                            {
                                <span class="badge bg-primary me-1"><i class="fas fa-clock me-1"></i>@maxHazirlanmaSuresi dk</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0 restaurant-card">
                        <div class="position-relative overflow-hidden" style="height: 220px;">
                            <img src="@(string.IsNullOrEmpty(item.ResimUrl) ? "https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=600" : item.ResimUrl)" 
                                 class="card-img-top h-100" style="object-fit: cover;" alt="@item.Ad">
                            <div class="position-absolute top-0 start-0 m-3">
                                <span class="badge bg-success">Acik</span>
                            </div>
                            <div class="restaurant-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" 
                                 style="background: rgba(0,0,0,0.7); opacity: 0; transition: 0.3s;">
                                @Html.ActionLink("Menuyu Gor", "ByRestaurant", "Food", new { id = item.RestoranId }, new { @class = "btn btn-warning btn-lg" })
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@item.Ad</h5>
                            <p class="card-text text-muted small">@(string.IsNullOrEmpty(item.Aciklama) ? "Lezzetli yemekler" : item.Aciklama)</p>
                            
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="rating text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                    <span class="text-muted ms-1">(4.8)</span>
                                </div>
                                <small class="text-success">
                                    <i class="fas fa-clock me-1"></i>30-45 dk
                                </small>
                            </div>
                            
                            <div class="d-flex gap-2">
                                @Html.ActionLink("Menu", "ByRestaurant", "Food", new { id = item.RestoranId }, new { @class = "btn btn-primary btn-sm flex-grow-1" })
                                @if (isAdmin)
                                {
                                    @Html.ActionLink("Duzenle", "Edit", new { id = item.RestoranId }, new { @class = "btn btn-outline-secondary btn-sm" })
                                    @Html.ActionLink("Sil", "Delete", new { id = item.RestoranId }, new { @class = "btn btn-outline-danger btn-sm" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-store fa-5x text-muted mb-4"></i>
            <h3 class="text-muted mb-3">Henuz restoran eklenmemis</h3>
            <p class="text-muted mb-4">Ilk restorani ekleyin</p>
            @if (isAdmin)
            {
                @Html.ActionLink("Restoran Ekle", "Create", null, new { @class = "btn btn-primary btn-lg" })
            }
        </div>
    }
</div>

<style>
    .restaurant-card:hover .restaurant-overlay { opacity: 1 !important; }
    .restaurant-card { transition: transform 0.3s; }
    .restaurant-card:hover { transform: translateY(-5px); }
</style>
