@model IEnumerable<mvc_full.Models.Musteri>
@{
    ViewBag.Title = "Müşteriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var restoran = ViewBag.Restoran as mvc_full.Models.Restoran;
    string restoranAdi = restoran != null ? restoran.Ad : "Restoran";
}

<div class="restaurant-admin-header py-4 mb-4" style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center text-white">
            <div>
                <h1 class="mb-1">
                    <i class="fas fa-users me-3"></i>Müşteriler
                </h1>
                <p class="mb-0 opacity-75">@restoranAdi - Müşteri Listesi</p>
            </div>
            <a href="@Url.Action("Dashboard", "RestaurantAdmin")" class="btn btn-light">
                <i class="fas fa-arrow-left me-2"></i>Dashboard
            </a>
        </div>
    </div>
</div>

<div class="container">
    <!-- İstatistikler -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <h3>@Model.Count()</h3>
                    <small>Toplam Müşteri</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body text-center">
                    <i class="fas fa-user-check fa-2x mb-2"></i>
                    <h3>@Model.Count()</h3>
                    <small>Aktif Müşteri</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body text-center">
                    <i class="fas fa-star fa-2x mb-2"></i>
                    <h3>@Model.Count()</h3>
                    <small>Sizden Sipariş Veren</small>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Müşteri Listesi -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0"><i class="fas fa-list text-info me-2"></i>Tüm Müşteriler (@Model.Count())</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Müşteri</th>
                                <th>E-posta</th>
                                <th>Telefon</th>
                                <th>Adres</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="rounded-circle bg-info text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    </td>
                                    <td>
                                        <strong>@customer.Ad @customer.Soyad</strong>
                                    </td>
                                    <td>
                                        <a href="mailto:@customer.Email" class="text-decoration-none">
                                            <i class="fas fa-envelope text-muted me-1"></i>@customer.Email
                                        </a>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(customer.Telefon))
                                        {
                                            <a href="tel:@customer.Telefon" class="text-decoration-none">
                                                <i class="fas fa-phone text-success me-1"></i>@customer.Telefon
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(customer.Adres))
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-map-marker-alt me-1"></i>
                                                @(customer.Adres.Length > 40 ? customer.Adres.Substring(0, 40) + "..." : customer.Adres)
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-success">Aktif</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Henüz müşteri yok</h5>
                    <p class="text-muted">Restoranınızdan sipariş veren müşteriler burada görüntülenecek</p>
                </div>
            }
        </div>
    </div>
</div>
