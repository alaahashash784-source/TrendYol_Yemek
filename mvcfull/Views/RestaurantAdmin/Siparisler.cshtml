@model IEnumerable<mvc_full.Models.OrderPage>
@{
    ViewBag.Title = "Siparişler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var restoran = ViewBag.Restoran as mvc_full.Models.Restoran;
    var customers = ViewBag.Customers as List<mvc_full.Models.Musteri>;
    string restoranAdi = restoran != null ? restoran.Ad : "Restoran";
}

<div class="restaurant-admin-header py-4 mb-4" style="background: linear-gradient(135deg, #f39c12 0%, #e74c3c 100%);">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center text-white">
            <div>
                <h1 class="mb-1">
                    <i class="fas fa-shopping-bag me-3"></i>Siparişler
                </h1>
                <p class="mb-0 opacity-75">@restoranAdi - Sipariş Yönetimi</p>
            </div>
            <a href="@Url.Action("Dashboard", "RestaurantAdmin")" class="btn btn-light">
                <i class="fas fa-arrow-left me-2"></i>Dashboard
            </a>
        </div>
    </div>
</div>

<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <!-- İstatistikler -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning text-white">
                <div class="card-body text-center">
                    <i class="fas fa-clock fa-2x mb-2"></i>
                    <h3>@Model.Count(o => o.OrderStatus == "Hazirlaniyor")</h3>
                    <small>Hazırlanıyor</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body text-center">
                    <i class="fas fa-motorcycle fa-2x mb-2"></i>
                    <h3>@Model.Count(o => o.OrderStatus == "Yolda")</h3>
                    <small>Yolda</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-2x mb-2"></i>
                    <h3>@Model.Count(o => o.OrderStatus == "Teslim")</h3>
                    <small>Teslim Edildi</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body text-center">
                    <i class="fas fa-lira-sign fa-2x mb-2"></i>
                    <h3>@Model.Sum(o => o.TotalPrice).ToString("N0") TL</h3>
                    <small>Toplam Gelir</small>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Sipariş Listesi -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0"><i class="fas fa-list text-warning me-2"></i>Tüm Siparişler (@Model.Count())</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Sipariş No</th>
                                <th>Müşteri</th>
                                <th>Tarih</th>
                                <th>Adres</th>
                                <th>Tutar</th>
                                <th>Durum</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                var customer = customers != null ? customers.FirstOrDefault(c => c.MusteriId == order.MusteriId) : null;
                                <tr>
                                    <td><strong>#@order.OrderId</strong></td>
                                    <td>
                                        @if (customer != null)
                                        {
                                            <span>@customer.Ad @customer.Soyad</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Bilinmiyor</span>
                                        }
                                    </td>
                                    <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @{
                                            string adres = order.DeliveryAddress ?? "";
                                            string adresKisa = adres.Length > 30 ? adres.Substring(0, 30) + "..." : adres;
                                        }
                                        <small class="text-muted">@adresKisa</small>
                                    </td>
                                    <td class="text-success fw-bold">@order.TotalPrice.ToString("F2") TL</td>
                                    <td>
                                        @if (order.OrderStatus == "Onaylandi")
                                        {
                                            <span class="badge bg-success">Onaylandı</span>
                                        }
                                        else if (order.OrderStatus == "Hazirlaniyor")
                                        {
                                            <span class="badge bg-warning text-dark">Hazırlanıyor</span>
                                        }
                                        else if (order.OrderStatus == "Yolda")
                                        {
                                            <span class="badge bg-info">Yolda</span>
                                        }
                                        else if (order.OrderStatus == "Teslim")
                                        {
                                            <span class="badge bg-primary">Teslim Edildi</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@order.OrderStatus</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                Durum Güncelle
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form method="post" action="@Url.Action("UpdateOrderStatus", "RestaurantAdmin")" style="display:inline;">
                                                        <input type="hidden" name="orderId" value="@order.OrderId" />
                                                        <input type="hidden" name="status" value="Hazirlaniyor" />
                                                        <button type="submit" class="dropdown-item"><i class="fas fa-clock text-warning me-2"></i>Hazırlanıyor</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" action="@Url.Action("UpdateOrderStatus", "RestaurantAdmin")" style="display:inline;">
                                                        <input type="hidden" name="orderId" value="@order.OrderId" />
                                                        <input type="hidden" name="status" value="Yolda" />
                                                        <button type="submit" class="dropdown-item"><i class="fas fa-motorcycle text-info me-2"></i>Yolda</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" action="@Url.Action("UpdateOrderStatus", "RestaurantAdmin")" style="display:inline;">
                                                        <input type="hidden" name="orderId" value="@order.OrderId" />
                                                        <input type="hidden" name="status" value="Teslim" />
                                                        <button type="submit" class="dropdown-item"><i class="fas fa-check text-success me-2"></i>Teslim Edildi</button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-shopping-bag fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Henüz sipariş yok</h5>
                    <p class="text-muted">Siparişler burada görüntülenecek</p>
                </div>
            }
        </div>
    </div>
</div>
