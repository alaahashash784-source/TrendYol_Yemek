@*
    لوحة تحكم مدير المطعم - يدير وجبات مطعمه فقط
    Controller: RestaurantAdminController.cs → Action: Dashboard()
*@

@{
    ViewBag.Title = "Restoran Yönetim Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var restoranAdi = ViewBag.RestoranAdi as string ?? "Restoranınız";
    var yemekler = ViewBag.Yemekler as IEnumerable<mvc_full.Models.Yemek>;
    var restoran = ViewBag.Restoran as mvc_full.Models.Restoran;
    int restoranId = ViewBag.RestoranId ?? 0;
    int estimatedOrders = ViewBag.EstimatedOrders ?? 0;
    decimal estimatedRevenue = ViewBag.EstimatedRevenue ?? 0m;
}

<div class="restaurant-admin-header py-5 mb-4" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center text-white">
            <div>
                <h1 class="mb-2">
                    <i class="fas fa-store me-3"></i>@restoranAdi
                </h1>
                <p class="mb-0 opacity-75">Restoran Yönetim Paneli</p>
            </div>
            <div>
                <span class="badge bg-light text-success fs-6">
                    <i class="fas fa-user-tie me-2"></i>Restoran Yöneticisi
                </span>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Satış İstatistikleri -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white text-center py-4">
                    <div class="rounded-circle bg-white bg-opacity-25 d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                        <i class="fas fa-shopping-cart fa-2x"></i>
                    </div>
                    <h2 class="fw-bold mb-1">@estimatedOrders</h2>
                    <p class="mb-0 opacity-75">Tahmini Sipariş</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                <div class="card-body text-white text-center py-4">
                    <div class="rounded-circle bg-white bg-opacity-25 d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                        <i class="fas fa-lira-sign fa-2x"></i>
                    </div>
                    <h2 class="fw-bold mb-1">@estimatedRevenue.ToString("N0") TL</h2>
                    <p class="mb-0 opacity-75">Tahmini Gelir</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <div class="card-body text-white text-center py-4">
                    <div class="rounded-circle bg-white bg-opacity-25 d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                        <i class="fas fa-utensils fa-2x"></i>
                    </div>
                    <h2 class="fw-bold mb-1">@(yemekler != null ? yemekler.Count() : 0)</h2>
                    <p class="mb-0 opacity-75">Menü Sayısı</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                <div class="card-body text-white text-center py-4">
                    <div class="rounded-circle bg-white bg-opacity-25 d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                        <i class="fas fa-star fa-2x"></i>
                    </div>
                    <h2 class="fw-bold mb-1">4.8</h2>
                    <p class="mb-0 opacity-75">Ortalama Puan</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Hızlı İstatistikler -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-utensils fa-2x"></i>
                    </div>
                    <h3 class="fw-bold text-primary">@(yemekler != null ? yemekler.Count() : 0)</h3>
                    <p class="text-muted mb-0">Toplam Yemek</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-success text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-tags fa-2x"></i>
                    </div>
                    <h3 class="fw-bold text-success">@(yemekler != null ? yemekler.Select(y => y.Kategori).Distinct().Count() : 0)</h3>
                    <p class="text-muted mb-0">Kategori</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-warning text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                    <h3 class="fw-bold text-warning">@(yemekler != null && yemekler.Any() ? Math.Round(yemekler.Average(y => y.HazirlanmaSuresi > 0 ? y.HazirlanmaSuresi : 15)) : 0) dk</h3>
                    <p class="text-muted mb-0">Ort. Hazırlanma Süresi</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-bolt text-warning me-2"></i>Hızlı İşlemler</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-3">
                        <a href="@Url.Action("Create", "Food")" class="btn btn-success btn-lg">
                            <i class="fas fa-plus me-2"></i>Yeni Yemek Ekle
                        </a>
                        <a href="@Url.Action("ByRestaurant", "Food", new { id = restoranId })" class="btn btn-primary btn-lg">
                            <i class="fas fa-list me-2"></i>Tüm Yemeklerim
                        </a>
                        <a href="@Url.Action("Siparisler", "RestaurantAdmin")" class="btn btn-warning btn-lg">
                            <i class="fas fa-shopping-bag me-2"></i>Siparişler
                        </a>
                        <a href="@Url.Action("Musteriler", "RestaurantAdmin")" class="btn btn-info btn-lg text-white">
                            <i class="fas fa-users me-2"></i>Müşteriler
                        </a>
                        <a href="@Url.Action("Sales", "RestaurantAdmin")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-chart-line me-2"></i>Satış Raporları
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Son Siparişler ve Müşteriler -->
    <div class="row mb-4">
        <!-- Son Siparişler -->
        <div class="col-md-7 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-shopping-bag text-warning me-2"></i>Son Siparişler</h5>
                    <a href="@Url.Action("Siparisler", "RestaurantAdmin")" class="btn btn-sm btn-outline-warning">Tümünü Gör</a>
                </div>
                <div class="card-body p-0">
                    @{
                        var recentOrders = ViewBag.RecentOrders as List<mvc_full.Models.OrderPage>;
                    }
                    @if (recentOrders != null && recentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Tarih</th>
                                        <th>Tutar</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in recentOrders.Take(5))
                                    {
                                        <tr>
                                            <td><strong>#@order.OrderId</strong></td>
                                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td class="text-success fw-bold">@order.TotalPrice.ToString("F2") TL</td>
                                            <td>
                                                @if (order.OrderStatus == "Onaylandi")
                                                {
                                                    <span class="badge bg-success">Onaylandı</span>
                                                }
                                                else if (order.OrderStatus == "Hazirlaniyor")
                                                {
                                                    <span class="badge bg-warning text-dark">Hazırlanıyor</span>
                                                }
                                                else if (order.OrderStatus == "Yolda")
                                                {
                                                    <span class="badge bg-info">Yolda</span>
                                                }
                                                else if (order.OrderStatus == "Teslim")
                                                {
                                                    <span class="badge bg-primary">Teslim Edildi</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@order.OrderStatus</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Henüz sipariş yok</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Müşteriler -->
        <div class="col-md-5 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-users text-info me-2"></i>Müşteriler</h5>
                    <a href="@Url.Action("Musteriler", "RestaurantAdmin")" class="btn btn-sm btn-outline-info">Tümünü Gör</a>
                </div>
                <div class="card-body p-0">
                    @{
                        var customers = ViewBag.Customers as List<mvc_full.Models.Musteri>;
                    }
                    @if (customers != null && customers.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var customer in customers.Take(5))
                            {
                                <li class="list-group-item d-flex align-items-center">
                                    <div class="rounded-circle bg-info text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        <strong>@customer.Ad @customer.Soyad</strong>
                                        <br>
                                        <small class="text-muted">@customer.Email</small>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Henüz müşteri yok</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Yemek Listesi -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-utensils text-primary me-2"></i>Yemekleriniz</h5>
            <a href="@Url.Action("Create", "Food")" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Yeni Ekle
            </a>
        </div>
        <div class="card-body p-0">
            @if (yemekler != null && yemekler.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Yemek Adı</th>
                                <th>Kategori</th>
                                <th>Fiyat</th>
                                <th>Stok</th>
                                <th>Hazırlanma Süresi</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var yemek in yemekler)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(yemek.ResimUrl))
                                            {
                                                <img src="@yemek.ResimUrl" alt="@yemek.Ad" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="rounded bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-utensils"></i>
                                                </div>
                                            }
                                            <span class="fw-medium">@yemek.Ad</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@(string.IsNullOrEmpty(yemek.Kategori) ? "Diğer" : yemek.Kategori)</span>
                                    </td>
                                    <td class="text-success fw-bold">@yemek.Fiyat.ToString("F2") TL</td>
                                    <td>
                                        @if (yemek.Stok > 10)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check me-1"></i>@yemek.Stok adet</span>
                                        }
                                        else if (yemek.Stok > 0)
                                        {
                                            <span class="badge bg-warning text-dark"><i class="fas fa-exclamation-triangle me-1"></i>@yemek.Stok adet</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Tükendi</span>
                                        }
                                    </td>
                                    <td>
                                        <i class="fas fa-clock text-info me-1"></i>@(yemek.HazirlanmaSuresi > 0 ? yemek.HazirlanmaSuresi : 15) dk
                                    </td>
                                    <td class="text-end">
                                        <a href="@Url.Action("Edit", "Food", new { id = yemek.YemekId })" class="btn btn-outline-primary btn-sm me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Food", new { id = yemek.YemekId })" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-utensils fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Henüz yemek eklenmemiş</h5>
                    <p class="text-muted mb-3">İlk yemeğinizi ekleyerek başlayın</p>
                    <a href="@Url.Action("Create", "Food")" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Yemek Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>
