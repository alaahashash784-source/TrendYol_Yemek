@model mvc_full.Models.OrderPage

@{
    ViewBag.Title = "Siparis Onaylandi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Süre hesaplamaları - 4 aşama
    int onaylamaSuresi = 10;  // Aşama 1: Onaylama - 10 dakika sabit
    int hazirlanmaSuresi = Model.TahminiHazirlanmaSuresi;  // Aşama 2: Hazırlama - veritabanından
    int teslimatSuresi = 35;  // Aşama 3 ve 4: Teslimat - 35 dakika sabit
    int toplamSure = onaylamaSuresi + hazirlanmaSuresi + teslimatSuresi;
    
    var siparisSaati = Model.OrderDate;
    var onayBitisSaati = siparisSaati.AddMinutes(onaylamaSuresi);
    var hazirBitisSaati = onayBitisSaati.AddMinutes(hazirlanmaSuresi);
    var teslimSaati = hazirBitisSaati.AddMinutes(teslimatSuresi);
    
    // İlerleme yüzdesini hesapla
    var gecenSure = (DateTime.Now - siparisSaati).TotalMinutes;
    int ilerlemeYuzdesi = gecenSure > toplamSure ? 100 : (int)((gecenSure / toplamSure) * 100);
    if (ilerlemeYuzdesi < 0) { ilerlemeYuzdesi = 0; }
    
    // Kalan süreleri hesapla
    var kalanHazirlanmaSuresi = (int)(hazirBitisSaati - DateTime.Now).TotalMinutes;
    if (kalanHazirlanmaSuresi < 0) { kalanHazirlanmaSuresi = 0; }
    
    var kalanTeslimSuresi = (int)(teslimSaati - DateTime.Now).TotalMinutes;
    if (kalanTeslimSuresi < 0) { kalanTeslimSuresi = 0; }
    
    // Mevcut aşamayı belirleme
    var now = DateTime.Now;
    var currentStage = "onaylandi";
    
    if (now >= teslimSaati || Model.OrderStatus == "Teslim Edildi")
    {
        currentStage = "teslim";
    }
    else if (now >= hazirBitisSaati || Model.OrderStatus == "Yolda")
    {
        currentStage = "yolda";
    }
    else if (now >= onayBitisSaati || Model.OrderStatus == "Hazirlaniyor")
    {
        currentStage = "hazirlaniyor";
    }
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="text-success mb-3">Odeme Gerceklestirildi!</h2>
                    <h4 class="text-primary mb-3">Siparisizin Basariyla Alindi!</h4>
                    <p class="text-muted mb-4">
                        Siparisizin basariyla alindi. En kisa surede hazirlanip size ulastirilacaktir.
                    </p>
                    
                    @if (Model != null)
                    {
                        <div class="alert alert-success border mb-4">
                            <div class="row">
                                <div class="col-md-6 text-start">
                                    <small class="text-muted d-block">Siparis Numarasi</small>
                                    <h4 class="mb-0 text-success fw-bold">#@Model.OrderId</h4>
                                </div>
                                <div class="col-md-6 text-start">
                                    <small class="text-muted d-block">Siparis Tarihi</small>
                                    <h5 class="mb-0">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</h5>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card bg-light mb-4">
                            <div class="card-body text-start">
                                <h5 class="card-title"><i class="fas fa-info-circle me-2"></i>Siparis Detaylari</h5>
                                <hr>
                                <div class="row mb-2">
                                    <div class="col-6"><strong>Toplam Tutar:</strong></div>
                                    <div class="col-6 text-end text-success fw-bold">@Model.TotalPrice.ToString("F2") TL</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-6"><strong>Odeme Yontemi:</strong></div>
                                    <div class="col-6 text-end">@(Model.PaymentMethod ?? "Kapida Odeme")</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-6"><strong>Siparis Durumu:</strong></div>
                                    <div class="col-6 text-end"><span class="badge bg-success">@Model.OrderStatus</span></div>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.DeliveryAddress))
                                {
                                    <div class="row mb-2">
                                        <div class="col-12"><strong>Teslimat Adresi:</strong></div>
                                        <div class="col-12 text-muted">@Model.DeliveryAddress</div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    
                    <div class="bg-light rounded p-3 mb-4">
                        <div class="row text-center">
                            <div class="col-3">
                                <i class="fas fa-clipboard-check text-primary fa-2x mb-2"></i>
                                <small class="text-muted d-block">Onaylama</small>
                                <span class="fw-bold text-primary">@onaylamaSuresi dk</span>
                            </div>
                            <div class="col-3">
                                <i class="fas fa-clock text-warning fa-2x mb-2"></i>
                                <small class="text-muted d-block">Hazırlanma</small>
                                <span class="fw-bold text-warning">@hazirlanmaSuresi dk</span>
                            </div>
                            <div class="col-3">
                                <i class="fas fa-motorcycle text-info fa-2x mb-2"></i>
                                <small class="text-muted d-block">Teslimat</small>
                                <span class="fw-bold text-info">@teslimatSuresi dk</span>
                            </div>
                            <div class="col-3">
                                <i class="fas fa-check-double text-success fa-2x mb-2"></i>
                                <small class="text-muted d-block">Tahmini Teslim</small>
                                <span class="fw-bold text-success">@teslimSaati.ToString("HH:mm")</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Order Timeline - Dynamic -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-4"><i class="fas fa-route me-2 text-primary"></i>Sipariş Takibi</h5>
                            
                            <div class="timeline-container position-relative">
                                <!-- Timeline Line -->
                                <div class="timeline-line position-absolute" style="top: 25px; left: 0; right: 0; height: 4px; background: #e9ecef; z-index: 0;">
                                    <div class="timeline-progress" style="height: 100%; background: linear-gradient(90deg, #28a745, #17a2b8); width: @ilerlemeYuzdesi%;"></div>
                                </div>
                                
                                <div class="row position-relative" style="z-index: 1;">
                                    <!-- Stage 1: Onaylandı -->
                                    <div class="col-3 text-center">
                                        <div class="timeline-dot mx-auto mb-2 d-flex align-items-center justify-content-center rounded-circle @(currentStage != "" ? "bg-success text-white" : "bg-secondary text-white")" style="width: 50px; height: 50px;">
                                            <i class="fas fa-check"></i>
                                        </div>
                                        <small class="d-block fw-bold text-success">Onaylandı</small>
                                        <small class="text-muted">@siparisSaati.ToString("HH:mm")</small>
                                    </div>
                                    
                                    <!-- Stage 2: Hazırlanıyor -->
                                    <div class="col-3 text-center">
                                        <div class="timeline-dot mx-auto mb-2 d-flex align-items-center justify-content-center rounded-circle @(currentStage == "hazirlaniyor" || currentStage == "yolda" || currentStage == "teslim" ? "bg-success text-white" : "bg-secondary text-white")" style="width: 50px; height: 50px;">
                                            @if(currentStage == "hazirlaniyor")
                                            {
                                                <i class="fas fa-utensils fa-spin"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-utensils"></i>
                                            }
                                        </div>
                                        <small class="d-block fw-bold @(currentStage == "hazirlaniyor" ? "text-warning" : currentStage == "yolda" || currentStage == "teslim" ? "text-success" : "text-muted")">Hazırlanıyor</small>
                                        <small class="text-muted">~@hazirlanmaSuresi dk</small>
                                    </div>
                                    
                                    <!-- Stage 3: Yolda -->
                                    <div class="col-3 text-center">
                                        <div class="timeline-dot mx-auto mb-2 d-flex align-items-center justify-content-center rounded-circle @(currentStage == "yolda" || currentStage == "teslim" ? "bg-info text-white" : "bg-secondary text-white")" style="width: 50px; height: 50px;">
                                            @if(currentStage == "yolda")
                                            {
                                                <i class="fas fa-motorcycle fa-beat"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-motorcycle"></i>
                                            }
                                        </div>
                                        <small class="d-block fw-bold @(currentStage == "yolda" ? "text-info" : currentStage == "teslim" ? "text-success" : "text-muted")">Yolda</small>
                                        <small class="text-muted">~@teslimatSuresi dk</small>
                                    </div>
                                    
                                    <!-- Stage 4: Teslim Edildi -->
                                    <div class="col-3 text-center">
                                        <div class="timeline-dot mx-auto mb-2 d-flex align-items-center justify-content-center rounded-circle @(currentStage == "teslim" ? "bg-success text-white" : "bg-secondary text-white")" style="width: 50px; height: 50px;">
                                            <i class="fas fa-home"></i>
                                        </div>
                                        <small class="d-block fw-bold @(currentStage == "teslim" ? "text-success" : "text-muted")">Teslim Edildi</small>
                                        <small class="text-muted">@teslimSaati.ToString("HH:mm")</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    

                    
                    <p class="text-muted small mb-4">
                        <i class="fas fa-envelope me-1"></i> Siparis durumunuz hakkinda e-posta ile bilgilendirileceksiniz.
                    </p>
                    
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>Ana Sayfaya Don
                        </a>
                        <a href="@Url.Action("Index", "Restaurant")" class="btn btn-outline-secondary">
                            <i class="fas fa-utensils me-2"></i>Yeni Siparis Ver
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <p class="text-muted small">
                    <i class="fas fa-phone-alt me-1"></i> Yardim icin: 0850 123 45 67
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
    }
    .fa-check-circle {
        animation: pulse 2s ease-in-out infinite;
    }
    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }
    #countdown-timer {
        font-family: 'Courier New', monospace;
        letter-spacing: 3px;
    }
</style>


