@model mvc_full.Models.Yemek

@{
    ViewBag.Title = "Yemek Duzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-4">
                    <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Yemek Duzenle</h3>
                </div>
                <div class="card-body p-5">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.YemekId)
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="mb-4">
                            <label class="form-label fw-bold">Yemek Adi *</label>
                            @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                            @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Aciklama</label>
                            @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control", rows = 3 })
                            @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">Fiyat (TL) *</label>
                                @Html.EditorFor(model => model.Fiyat, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.Fiyat, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">Restoran *</label>
                                @Html.DropDownList("RestoranId", null, "-- Restoran Secin --", new { @class = "form-select form-select-lg" })
                                @Html.ValidationMessageFor(model => model.RestoranId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-clock text-info me-1"></i>Hazırlanma Süresi (dakika) *
                                </label>
                                @Html.EditorFor(model => model.HazirlanmaSuresi, new { htmlAttributes = new { @class = "form-control form-control-lg", min = 1, max = 180 } })
                                @Html.ValidationMessageFor(model => model.HazirlanmaSuresi, "", new { @class = "text-danger" })
                                <small class="text-muted">Müşteriye yemeğin ne kadar sürede hazırlanacağını gösterir</small>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tag text-success me-1"></i>Kategori
                                </label>
                                @Html.DropDownList("Kategori", ViewBag.Kategoriler as IEnumerable<SelectListItem>, new { @class = "form-select form-select-lg" })
                                @Html.ValidationMessageFor(model => model.Kategori, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-boxes text-warning me-1"></i>Stok Miktarı *
                                </label>
                                @Html.EditorFor(model => model.Stok, new { htmlAttributes = new { @class = "form-control form-control-lg", min = 0, max = 10000 } })
                                @Html.ValidationMessageFor(model => model.Stok, "", new { @class = "text-danger" })
                                <small class="text-muted">Mevcut stok adedi. 0 olursa tükendi olarak görünür.</small>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-toggle-on text-primary me-1"></i>Stok Durumu
                                </label>
                                <div class="form-check form-switch mt-2">
                                    @Html.CheckBoxFor(model => model.StokAktif, new { @class = "form-check-input", style = "width: 3em; height: 1.5em;" })
                                    <label class="form-check-label ms-2">Satışa Açık</label>
                                </div>
                                <small class="text-muted">Kapalıysa müşteriler sipariş veremez.</small>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Resim URL</label>
                            @Html.EditorFor(model => model.ResimUrl, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ResimUrl, "", new { @class = "text-danger" })
                        </div>

                        if (!string.IsNullOrEmpty(Model.ResimUrl))
                        {
                            <div class="mb-4">
                                <label class="form-label fw-bold">Mevcut Resim:</label>
                                <div>
                                    <img src="@Model.ResimUrl" alt="@Model.Ad" class="img-thumbnail" style="max-height: 150px;">
                                </div>
                            </div>
                        }

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                            @Html.ActionLink("Iptal", "Details", new { id = Model.YemekId }, new { @class = "btn btn-outline-secondary btn-lg px-5" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
