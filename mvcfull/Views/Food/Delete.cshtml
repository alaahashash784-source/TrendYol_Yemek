@model mvc_full.Models.Yemek

@{
    ViewBag.Title = "Yemek Sil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white py-4">
                    <h3 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Yemek Sil</h3>
                </div>
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle fa-4x text-warning"></i>
                    </div>
                    <h4 class="mb-3">Bu yemegi silmek istediginizden emin misiniz?</h4>
                    
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.ResimUrl))
                            {
                                <img src="@Model.ResimUrl" alt="@Model.Ad" class="img-thumbnail mb-3" style="max-height: 150px;">
                            }
                            <h5 class="fw-bold">@Model.Ad</h5>
                            <p class="text-muted mb-2">@Model.Aciklama</p>
                            <p class="text-success fw-bold fs-5">@Model.Fiyat.ToString("C0")</p>
                        </div>
                    </div>
                    
                    <p class="text-danger mb-4">
                        <i class="fas fa-info-circle me-1"></i>
                        Bu islem geri alinamaz!
                    </p>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex gap-3 justify-content-center">
                            <button type="submit" class="btn btn-danger btn-lg px-5">
                                <i class="fas fa-trash me-2"></i>Evet, Sil
                            </button>
                            @Html.ActionLink("Iptal", "Index", null, new { @class = "btn btn-outline-secondary btn-lg px-5" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
