            // ŸÖÿπÿßŸÑÿ¨ÿ© ÿßŸÑŸÜŸÇÿ± ÿπŸÑŸâ ÿßŸÑÿµŸàÿ±
            $('.image-option').on('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                var url = $(this).data('url');
                console.log('Selected URL:', url);
                
                // ÿ™ÿ≠ÿØŸäÿ´ ŸÇŸäŸÖÿ© ÿßŸÑŸÄ input
                $('#ResimUrl').val(url);
                
                // ÿ™ÿ≠ÿØŸäÿ´ ÿßŸÑŸÄ preview
                $('#imagePreview').attr('src', url).show();
                $('#noImageText').hide();
                
                // ÿ•ÿ≤ÿßŸÑÿ© ÿßŸÑŸÄ selected ŸÖŸÜ ŸÉŸÑ ÿßŸÑÿµŸàÿ± Ÿàÿ•ÿ∂ÿßŸÅÿ™Ÿá ŸÑŸÑŸÖÿÆÿ™ÿßÿ±ÿ©
                $('.image-option').removeClass('selected');
                $(this).addClass('selected');
            });
            
            // ÿ™ÿ≠ÿØŸäÿ´ ÿßŸÑŸÄ preview ÿπŸÜÿØ ŸÉÿ™ÿßÿ®ÿ© URL ŸäÿØŸàŸäÿßŸã
            $('#ResimUrl').on('input', function() {
                var url = $(this).val();
                if (url) {
                    $('#imagePreview').attr('src', url).show();
                    $('#noImageText').hide();
                } else {
                    $('#imagePreview').hide();
                    $('#noImageText').show();
                }
                $('.image-option').removeClass('selected');
            });
        });
