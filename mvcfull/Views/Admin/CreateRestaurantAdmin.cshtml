@*
    صفحة إنشاء مدير مطعم جديد
    Controller: AdminController.cs → Action: CreateRestaurantAdmin()
*@
@model mvc_full.Models.Musteri

@{
    ViewBag.Title = "Yeni Restoran Yöneticisi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white py-4">
                    <h3 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>Yeni Restoran Yöneticisi Oluştur
                    </h3>
                </div>
                <div class="card-body p-5">
                    @using (Html.BeginForm("CreateRestaurantAdmin", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">Ad *</label>
                                @Html.TextBoxFor(m => m.Ad, new { @class = "form-control form-control-lg", placeholder = "Yönetici adı" })
                                @Html.ValidationMessageFor(m => m.Ad, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">Soyad *</label>
                                @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control form-control-lg", placeholder = "Yönetici soyadı" })
                                @Html.ValidationMessageFor(m => m.Soyad, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Email *</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "ornek@email.com", type = "email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Şifre *</label>
                            @Html.PasswordFor(m => m.Sifre, new { @class = "form-control form-control-lg", placeholder = "En az 6 karakter" })
                            @Html.ValidationMessageFor(m => m.Sifre, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Telefon</label>
                            @Html.TextBoxFor(m => m.Telefon, new { @class = "form-control form-control-lg", placeholder = "5XX XXX XX XX" })
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="fas fa-store text-primary me-1"></i>Yönetilecek Restoran *
                            </label>
                            @Html.DropDownList("restoranId", ViewBag.Restoranlar as SelectList, "-- Restoran Seçin --", new { @class = "form-select form-select-lg", required = "required" })
                            <small class="text-muted">Bu yönetici sadece seçilen restoranın yemeklerini yönetebilecek</small>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Not:</strong> Restoran yöneticisi, sadece kendi restoranının yemeklerini ekleyebilir, düzenleyebilir ve silebilir. 
                            Ana admin paneline erişemez.
                        </div>

                        <div class="d-flex gap-3 mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="fas fa-save me-2"></i>Yönetici Oluştur
                            </button>
                            <a href="@Url.Action("RestaurantAdmins")" class="btn btn-outline-secondary btn-lg px-5">
                                <i class="fas fa-times me-2"></i>İptal
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
