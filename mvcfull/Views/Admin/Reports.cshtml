@model mvc_full.Controllers.ReportViewModel

@{
    ViewBag.Title = "Raporlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .admin-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        padding: 30px 0;
        margin-bottom: 30px;
    }
    .report-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }
    .rank-badge {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 14px;
    }
    .rank-1 { background: linear-gradient(135deg, #f5af19 0%, #f12711 100%); color: white; }
    .rank-2 { background: linear-gradient(135deg, #bdc3c7 0%, #2c3e50 100%); color: white; }
    .rank-3 { background: linear-gradient(135deg, #b8860b 0%, #8b4513 100%); color: white; }
    .rank-other { background: #e9ecef; color: #495057; }
</style>

<div class="admin-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1><i class="fas fa-chart-bar me-3"></i>Raporlar</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")" class="text-white-50">Admin</a></li>
                        <li class="breadcrumb-item active text-white">Raporlar</li>
                    </ol>
                </nav>
            </div>
            <div class="d-flex align-items-center gap-2">
                <a href="@Url.Action("ExportReportsCsv", "Admin")" class="btn btn-success">
                    <i class="fas fa-file-csv me-1"></i>CSV Indir
                </a>
                <span class="badge bg-light text-dark">
                    <i class="fas fa-calendar me-1"></i>Son 30 Gun
                </span>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Daily Orders Chart -->
        <div class="col-12 mb-4">
            <div class="card report-card">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-chart-line text-primary me-2"></i>Gunluk Siparisler</h5>
                </div>
                <div class="card-body">
                    @if (Model.DailyOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tarih</th>
                                        <th>Siparis Sayisi</th>
                                        <th>Toplam Gelir</th>
                                        <th>Grafik</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        decimal maxRevenue = Model.DailyOrders.Any() ? Model.DailyOrders.Max(d => d.TotalRevenue) : 1;
                                    }
                                    @foreach (var day in Model.DailyOrders.Take(10))
                                    {
                                        int percentage = (int)((day.TotalRevenue / maxRevenue) * 100);
                                        <tr>
                                            <td>
                                                <strong>@day.Date.ToString("dd MMM yyyy")</strong>
                                                <br>
                                                <small class="text-muted">@day.Date.ToString("dddd")</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary fs-6">@day.OrderCount</span>
                                            </td>
                                            <td>
                                                <strong class="text-success">@day.TotalRevenue.ToString("N2") TL</strong>
                                            </td>
                                            <td style="width: 40%;">
                                                <div class="progress" style="height: 25px;">
                                                    <div class="progress-bar bg-success" style="width: @percentage%;">
                                                        @percentage%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Henuz siparis verisi yok</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Top Restaurants -->
        <div class="col-lg-6 mb-4">
            <div class="card report-card h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-trophy text-warning me-2"></i>En Iyi Restoranlar</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopRestaurants.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @for (int i = 0; i < Model.TopRestaurants.Count; i++)
                            {
                                var restaurant = Model.TopRestaurants[i];
                                string rankClass = i == 0 ? "rank-1" : (i == 1 ? "rank-2" : (i == 2 ? "rank-3" : "rank-other"));
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <span class="rank-badge @rankClass me-3">@(i + 1)</span>
                                        <div>
                                            <strong>@restaurant.RestaurantName</strong>
                                            <br>
                                            <small class="text-muted">@restaurant.FoodCount yemek</small>
                                        </div>
                                    </div>
                                    <span class="badge bg-success">@restaurant.FoodCount</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-store fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Henuz restoran verisi yok</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Top Customers -->
        <div class="col-lg-6 mb-4">
            <div class="card report-card h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-users text-info me-2"></i>En Iyi Musteriler</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopCustomers.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @for (int i = 0; i < Model.TopCustomers.Count; i++)
                            {
                                var customer = Model.TopCustomers[i];
                                string rankClass = i == 0 ? "rank-1" : (i == 1 ? "rank-2" : (i == 2 ? "rank-3" : "rank-other"));
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <span class="rank-badge @rankClass me-3">@(i + 1)</span>
                                        <div>
                                            <strong>@customer.CustomerName</strong>
                                            <br>
                                            <small class="text-muted">@customer.OrderCount siparis</small>
                                        </div>
                                    </div>
                                    <span class="badge bg-success">@customer.TotalSpent.ToString("N0") TL</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Henuz musteri verisi yok</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Admin Paneline Don
        </a>
    </div>
</div>
