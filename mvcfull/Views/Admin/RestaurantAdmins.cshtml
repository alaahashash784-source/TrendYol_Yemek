@*
    صفحة إدارة مديري المطاعم - للأدمن الرئيسي
    Controller: AdminController.cs → Action: RestaurantAdmins()
*@
@model IEnumerable<mvc_full.Models.Musteri>

@{
    ViewBag.Title = "Restoran Yöneticileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">
                <i class="fas fa-user-tie text-primary me-2"></i>Restoran Yöneticileri
            </h2>
            <p class="text-muted mb-0">Her restoranın kendi yöneticisini atayın</p>
        </div>
        <a href="@Url.Action("CreateRestaurantAdmin")" class="btn btn-success btn-lg">
            <i class="fas fa-plus me-2"></i>Yeni Yönetici Ekle
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Yönetici</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Yönetilen Restoran</th>
                                <th>Kayıt Tarihi</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var admin in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                                <i class="fas fa-user-tie"></i>
                                            </div>
                                            <span class="fw-medium">@admin.TamAd</span>
                                        </div>
                                    </td>
                                    <td>@admin.Email</td>
                                    <td>@(admin.Telefon ?? "-")</td>
                                    <td>
                                        @if (admin.YonetilenRestoran != null)
                                        {
                                            <span class="badge bg-primary">@admin.YonetilenRestoran.Ad</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Atanmamış</span>
                                        }
                                    </td>
                                    <td>@admin.KayitTarihi.ToString("dd.MM.yyyy")</td>
                                    <td class="text-end">
                                        @using (Html.BeginForm("RemoveRestaurantAdmin", "Admin", FormMethod.Post, new { @class = "d-inline" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("musteriId", admin.MusteriId)
                                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Bu kullanıcının restoran yöneticisi yetkisini kaldırmak istediğinize emin misiniz?');">
                                                <i class="fas fa-user-minus"></i> Yetkiyi Kaldır
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-tie fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Henüz restoran yöneticisi yok</h5>
                    <p class="text-muted mb-3">İlk restoran yöneticinizi ekleyin</p>
                    <a href="@Url.Action("CreateRestaurantAdmin")" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Yönetici Ekle
                    </a>
                </div>
            }
        </div>
    </div>
    
    <div class="mt-4">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Admin Paneline Dön
        </a>
    </div>
</div>
